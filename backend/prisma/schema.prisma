// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Estudiante {
  estudiante_id       Int         @id @default(autoincrement())
  estudiante_nombre   String      @db.VarChar(200)
  estudiante_password String      @db.VarChar(200)
  estudiante_carrera  String      @db.VarChar(200)
  estudiante_ciclo    Int
  estudiante_foto     String?
  estudiante_email    String      @unique @db.VarChar(200)
  Matricula           Matricula[]

  @@index([estudiante_email])
  @@map("tbl_estudiante")
}

model Curso {
  curso_id       Int         @id @default(autoincrement())
  curso_nombre   String      @db.VarChar(100)
  curso_creditos Int
  curso_tipo     String      @default("obligatorio") @db.VarChar(45)
  curso_ciclo    Int      
  Clase          Clase[]
  Matricula      Matricula[]

  @@map("tbl_curso")
}

model Matricula {
  matricula_id                 Int        @id @default(autoincrement())
  tbl_estudiante_estudiante    Estudiante @relation(fields: [tbl_estudiante_estudiante_id], references: [estudiante_id])
  tbl_estudiante_estudiante_id Int
  tbl_curso_curso              Curso      @relation(fields: [tbl_curso_curso_id], references: [curso_id])
  tbl_curso_curso_id           Int

  @@map("tbl_matricula")
}

model Docente {
  docente_id     Int       @id @default(autoincrement())
  docente_nombre String    @db.VarChar(200)
  docente_edad   Int
  Horario        Horario[]

  @@map("tbl_docente")
}

model Horario {
  horario_id             Int      @id @default(autoincrement())
  horario_fecha          DateTime
  horario_disponibilidad Boolean  @default(true)
  horario_aforo          Int
  tbl_docente_docente    Docente  @relation(fields: [tbl_docente_docente_id], references: [docente_id])
  tbl_docente_docente_id Int
  Clase                  Clase[]

  @@map("tbl_horario")
}

model Clase {
  clase_id               Int         @id @default(autoincrement())
  clase_nsalon           String      @db.VarChar(10)
  tbl_curso_curso        Curso     @relation(fields: [tbl_curso_curso_id], references: [curso_id])
  tbl_curso_curso_id      Int
  Horario Horario[]

  @@map("tbl_clase")
}
